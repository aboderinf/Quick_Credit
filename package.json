     "description": "An API to manage endpoints for quick credit app",
     "main": "server.js",
     "author": "Feranmi Aboderin",
     "license": "MIT",
     "scripts": {
          "test": "nyc mocha --require babel-register Api/test.js --exit",
          "dev": "nodemon --exec babel-node --presets @babel/preset-env ./Api/server.js",
          "build": "@babel --presets @babel/preset-env Api --out-dir dist",
          "start": "node dist/server.js",
