          "@babel/preset-env": "^7.4.4",
          "@babel/register": "^7.4.4",
          "@babel/runtime": "^7.4.4",
          "babel-cli": "^6.26.0",
          "babel-preset-env": "^1.7.0",
          "body-parser": "^1.18.3",
          "cors": "^2.8.5",
          "coveralls": "^3.0.3",
          "dotenv": "^8.0.0",
          "express": "^4.16.3",
          "express-validator": "^5.3.1",
          "joi": "^14.3.1",
          "jsonwebtoken": "^8.5.1",
          "mailgun-js": "^0.22.0",
          "morgan": "^1.9.1",
